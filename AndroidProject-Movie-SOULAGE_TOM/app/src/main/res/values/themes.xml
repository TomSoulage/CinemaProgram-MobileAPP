<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_launcher_background</item>
        <item name="colorPrimaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/quicksandregular</item>
    </style>
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textSize">@dimen/tvSplashSize</item>
        <item name="android:fontFamily">@font/quicksandregular</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.AndroidProject.PagerActivityTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/viewMoviePagerSize</item>
        <item name="android:background">@color/ic_launcher_background</item>
    </style>

    <dimen name="viewMoviePagerSize">18sp</dimen>
</resources>