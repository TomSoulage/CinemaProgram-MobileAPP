<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="@dimen/llViewMoviePadding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivMovie"
            tools:src="@drawable/movieicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/llViewMovieMarginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView
               android:text="Date"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:layout_weight="5"
               android:layout_width="0dp"
               android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ivRead"
                tools:src="@drawable/visibility"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="yyyy-MM-ddThh:mm:ss" />

        <TextView
            android:text="@string/title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Example of text Example of text Example of text Example of text Example of text Example of text Example of text Example of text" />



        <TextView
            android:text="@string/description"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Example of text Example of text Example of text Example of text Example of text Example of text Example of text Example of text" />

    </LinearLayout>


</ScrollView>